<!-- Extend layout -->
<%- include('partials/header') %>

<!-- Hero Section -->
<section class="bg-cover bg-center h-96" style="background-image: url('/images/landing-pic.png');">
    <div class="flex justify-center items-center h-full bg-gray-900 bg-opacity-50">
        <h1 class="text-4xl md:text-5xl lg:text-6xl text-white font-bold text-center">Discover Your Next Adventure</h1>
    </div>
</section>

<!-- Info Section -->
<section class="max-w-6xl mx-auto p-8 bg-white mt-10 rounded-lg shadow-md">
    <h2 class="text-3xl font-semibold text-gray-800 mb-4 text-center">Why Choose Travix?</h2>
    <p class="text-lg text-gray-700 text-center">Travix offers unbeatable deals on flights, hotels, and transportation around the world. With a user-friendly interface and a dedicated customer support team, booking your travel has never been easier.</p>
</section>

<!-- Stats Section -->
<section class="bg-blue-600 py-12 text-white">
    <div class="max-w-7xl mx-auto px-4 grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
            <h3 class="text-4xl font-bold">10,000+</h3>
            <p class="text-xl mt-2">Destinations Worldwide</p>
        </div>
        <div class="text-center">
            <h3 class="text-4xl font-bold">1M+</h3>
            <p class="text-xl mt-2">Happy Customers</p>
        </div>
        <div class="text-center">
            <h3 class="text-4xl font-bold">24/7</h3>
            <p class="text-xl mt-2">Customer Support</p>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="max-w-6xl mx-auto p-8 bg-white mt-10 rounded-lg shadow-md">
    <h2 class="text-3xl font-semibold text-gray-800 mb-4 text-center">Our Features</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="text-center">
            <!-- Add a custom class to control image size -->
            <img src="/images/homepage/online-booking.png" alt="Easy Booking" class="mx-auto mb-4 w-20 h-20 md:w-24 md:h-24 lg:w-28 lg:h-28">
            <h3 class="text-xl font-bold text-gray-700">Easy Booking</h3>
            <p class="text-gray-600">Our platform makes it easy to book your entire trip in just a few clicks.</p>
        </div>
        <div class="text-center">
            <img src="/images/homepage/reward.png" alt="Best Prices" class="mx-auto mb-4 w-20 h-20 md:w-24 md:h-24 lg:w-28 lg:h-28">
            <h3 class="text-xl font-bold text-gray-700">Best Prices</h3>
            <p class="text-gray-600">We provide the best prices across flights, hotels, and transportation options.</p>
        </div>
        <div class="text-center">
            <img src="/images/homepage/24-7.png" alt="24/7 Support" class="mx-auto mb-4 w-20 h-20 md:w-24 md:h-24 lg:w-28 lg:h-28">
            <h3 class="text-xl font-bold text-gray-700">24/7 Support</h3>
            <p class="text-gray-600">Our customer support team is available around the clock to help you with any issues.</p>
        </div>
    </div>
</section>


<!-- Packages Section -->
<section class="bg-gray-100 py-12">
    <div class="max-w-7xl mx-auto px-4">
        <h2 class="text-3xl font-semibold text-gray-800 text-center mb-8">Travel Packages</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Package 1 -->
            <div class="relative bg-white p-6 rounded-lg shadow-md overflow-hidden" style="background-image: url('/images/homepage/economy.png'); background-size: cover; background-position: center;">
                <!-- Semi-transparent overlay -->
                <div class="absolute inset-0 bg-gray-800 bg-opacity-40"></div>
                <div class="relative z-10 text-white">
                    <h3 class="text-xl font-bold mb-4">Economy Package</h3>
                    <p>Ideal for budget travelers who want the best deals on flights and hotels.</p>
                    <p class="text-2xl font-semibold mt-4">Rs.25,000</p>
                    <button class="mt-6 w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700">Book Now</button>
                </div>
            </div>

            <!-- Package 2 -->
            <div class="relative bg-white p-6 rounded-lg shadow-md overflow-hidden" style="background-image: url('/images/homepage/premium.png'); background-size: cover; background-position: center;">
                <div class="absolute inset-0 bg-gray-800 bg-opacity-40"></div>
                <div class="relative z-10 text-white">
                    <h3 class="text-xl font-bold mb-4">Premium Package</h3>
                    <p>For those who want luxury travel experiences and top-tier services.</p>
                    <p class="text-2xl font-semibold mt-4">Rs.75,000</p>
                    <button class="mt-6 w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700">Book Now</button>
                </div>
            </div>

            <!-- Package 3 -->
            <div class="relative bg-white p-6 rounded-lg shadow-md overflow-hidden" style="background-image: url('/images/homepage/family.png'); background-size: cover; background-position: center;">
                <div class="absolute inset-0 bg-gray-800 bg-opacity-40"></div>
                <div class="relative z-10 text-white">
                    <h3 class="text-xl font-bold mb-4">Family Package</h3>
                    <p>The perfect choice for family vacations with added discounts for group bookings.</p>
                    <p class="text-2xl font-semibold mt-4">Rs.45,000</p>
                    <button class="mt-6 w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700">Book Now</button>
                </div>
            </div>
        </div>
    </div>
</section>
