<%- include('partials/header') %>

<!-- Full Page Background -->
<body class="bg-cover bg-center h-screen" style="background-image: url('/images/landing-pic.png');">
  
  <!-- Content Section -->
  <div class="flex justify-center items-center h-full">
    <h1 class="text-4xl md:text-5xl lg:text-6xl text-white font-bold text-center mt-24">Create Your Account</h1>
  </div>

  <!-- Container with padding around the form and more space around the white box -->
  <div class="max-w-4xl mx-auto p-8 sm:px-8 px-4 bg-white mt-10 mb-12 rounded-lg shadow-md sm:mt-16 sm:mb-16">
    <div class="text-center mb-8">
      <h2 class="text-3xl font-semibold text-gray-800">Welcome to Travix</h2>
      <p class="text-lg text-gray-600">Please fill in the details to create your account.</p>
    </div>
    
    <!-- Registration Form -->
    <form action="/register" method="POST" class="space-y-6">
        <div>
          <label for="username" class="block text-sm font-semibold text-gray-800">Email</label>
          <input type="email" class="w-full mt-2 px-4 py-3 border rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500" name="username" required>
        </div>
      
        <div>
          <label for="password" class="block text-sm font-semibold text-gray-800">Password</label>
          <input type="password" class="w-full mt-2 px-4 py-3 border rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500" name="password" required>
        </div>
      
        <div>
          <label for="confirm-password" class="block text-sm font-semibold text-gray-800">Confirm Password</label>
          <input type="password" class="w-full mt-2 px-4 py-3 border rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500" name="confirm-password" required>
        </div>
        
        <button type="submit" class="w-full mt-6 bg-blue-600 text-white py-3 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">Register</button>
      </form>
      
  </div>

<%- include('partials/footer') %>
</body>
